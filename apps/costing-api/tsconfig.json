{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "CommonJS",
    "target": "ES2022",
    "types": ["node"],
    "rootDir": ".",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["main.ts", "app/**/*.ts", "ingredients/**/*.ts", "recipes/**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
